@model PhoneStore.Models.CartIndexViewModel

@{
    ViewBag.Title = "PhoneStore: ваша корзина";
}

    <style>
        #cartTable td { vertical-align: middle; }
    </style>

<h2>Ваша корзина</h2>

<table id="cartTable" class="table">
    <thead>
        <tr>
            <th>Кол-во</th>
            <th>Телефон</th>
            <th class="text-right">Цена</th>
            <th class="text-right">Общая цена</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Phone.Name</td>
                <td class="text-right">@line.Phone.Price.ToString("# тенге")</td>
                <td class="text-right">
                    @((line.Quantity * line.Phone.Price).ToString("# тенге"))
                </td>
                <td>
                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                    {
                        @Html.Hidden("PhoneId", line.Phone.PhoneId)
                        @Html.HiddenFor(x => x.ReturnUrl)
                        <input class="btn btn-sm btn-warning" type="submit" value="Удалить" />
                    }
                </td>
            </tr>        
    }
    

        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Итого:</td>
                <td class="text-right">
                    @Model.Cart.ComputeTotalValue().ToString("# тенге")
                </td>
            </tr>
        </tfoot>
    </table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Продолжить покупки</a>
    @Html.ActionLink("Оформить заказ", "Checkout", null, new { @class = "btn btn-primary" })
</div>
